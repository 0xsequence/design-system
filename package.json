{
  "name": "@0xsequence/design-system",
  "version": "2.1.9",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "style": "dist/index.css",
  "types": "dist/index.d.ts",
  "homepage": "https://0xsequence.github.io/design-system/",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./preset": "./dist/index.css"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "pnpm storybook",
    "build": "tsup",
    "build:icons": "pnpm svgr -d ./src/icons ./public/static/icons --config-file ./svgr.config.json --template ./src/icons/template.cjs",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build -o ./docs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}'",
    "format": "prettier --list-different --write src/**/*.{ts,tsx}",
    "prepare": "husky",
    "prepack": "pnpm build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && pnpm test && changeset publish",
    "codemod": "jscodeshift --transform ./transforms/tailwind-transform.ts --parser tsx",
    "attw": "attw --pack ."
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@radix-ui/react-visually-hidden": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-hook-form": "^7.56.1",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@babel/core": "^7.26.10",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2",
    "@eslint/js": "^9.25.1",
    "@storybook/addon-designs": "^8.2.1",
    "@storybook/addon-docs": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "jscodeshift": "^17.3.0",
    "motion": "^12.9.2",
    "ox": "^0.7.0",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.6",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "motion": ">= 12",
    "react": ">= 17",
    "react-dom": ">= 17"
  },
  "packageManager": "pnpm@10.6.4"
}
