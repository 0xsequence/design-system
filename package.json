{
  "name": "@0xsequence/design-system",
  "version": "1.9.0",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "style": "dist/index.css",
  "types": "dist/index.d.ts",
  "homepage": "https://0xsequence.github.io/design-system/",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./preset": "./dist/index.css"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "pnpm storybook",
    "build": "tsup",
    "build:icons": "pnpm svgr -d ./src/icons ./public/static/icons --config-file ./svgr.config.json --template ./src/icons/template.cjs",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build -o ./docs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}'",
    "format": "prettier --list-different --write src/**/*.{ts,tsx}",
    "prepare": "husky",
    "prepack": "pnpm build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && pnpm test && changeset publish",
    "codemod": "jscodeshift --transform ./transforms/tailwind-transform.ts --parser tsx"
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@radix-ui/react-visually-hidden": "^1.1.2",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-docs": "^8.5.3",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/manager-api": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/theming": "^8.5.3",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.0.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "happy-dom": "^17.0.0",
    "husky": "^9.1.7",
    "jscodeshift": "^17.1.2",
    "motion": "^12.4.1",
    "ox": "^0.6.9",
    "postcss": "^8.5.1",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.5.3",
    "tailwindcss": "^4.0.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "motion": ">= 12",
    "react": ">= 17",
    "react-dom": ">= 17"
  }
}
